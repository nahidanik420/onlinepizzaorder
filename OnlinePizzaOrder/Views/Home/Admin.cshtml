
<!DOCTYPE html>
<html >
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Pizza Order</title>

    <link href="~/Content/pizzaorder/css/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/pizzaorder/css/font-awesome.min.css" />
    <link href="~/Content/pizzaorder/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/pizzaorder/css/style.css" />

    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css' />

    <style>
        #wrapper {
            position: fixed;
        }
    </style>
</head>
<body>


    <div id="wrapper">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="adjust-nav">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".sidebar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">
                        <img src="~/Content/pizzaorder/img/logo.png" />

                    </a>

                </div>

                <span class="logout-spn">
                    @Html.ActionLink("LogOut", "Logout", "Home", null, new { @class = "ht" })
                </span>
            </div>
        </div>

        <nav class="navbar-default navbar-side" role="navigation">
            <div class="sidebar-collapse">
                <ul class="nav" id="main-menu">

                    <li class="active-link">
                        <a href="@Url.Action("Admin", "Home")"><i class="fa fa-desktop "></i>Dashboard</a>
                    </li>

                    <li>
                        <a href="@Url.Action("AdminFoodAdd", "Home")"><i class="fa fa-plus "></i>Add Pizza</a>
                    </li>
                    <li>
                        <a href="@Url.Action("showfood", "Home")"><i class="fa fa-info-circle "></i>Pizza Details</a>
                    </li>
                    <li >
                        <a href="@Url.Action("showuser", "Home")"><i class="fa fa-users "></i>User Details</a>
                    </li>
                    <li>
                        <a href="@Url.Action("OrderDetails", "Home")"><i class="fa fa-list-ol "></i>Order Details</a>
                    </li>

                </ul>
            </div>

        </nav>

        <div id="page-wrapper">
            <div id="page-inner">
                <div class="row">
                    <div class="col-lg-12">
                        <h2>ADMIN DASHBOARD</h2>
                    </div>
                </div>

                <hr />
                <div class="row">
                    <div class="col-lg-12 ">
                        <div class="alert alert-info">
                            <strong>Welcome Admin ! </strong>.
                        </div>

                    </div>
                </div>

                <div class="row text-center pad-top">
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <div class="div-square">
                            <a href="@Url.Action("AdminFoodAdd", "Home")">
                                <i class="fa fa-plus"></i>
                                <h4>Add Pizza</h4>
                            </a>
                        </div>


                    </div>

                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <div class="div-square">
                            <a href="@Url.Action("showfood", "Home")">
                                <i class="fa fa-info-circle"></i>
                                <h4>Pizza Details</h4>
                            </a>
                        </div>


                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <div class="div-square">
                            <a href="@Url.Action("showuser", "Home")">
                                <i class="fa fa-users"></i>
                                <h4>User Details</h4>
                            </a>
                        </div>


                    </div>
                    <div class="col-lg-2 col-md-2 col-sm-2 col-xs-6">
                        <div class="div-square">
                            <a href="@Url.Action("Admin", "Home")">
                                <i class="fa fa-list-ol"></i>
                                <h4>Order Details</h4>
                            </a>
                        </div>


                    </div>
                </div>

                <div class="row">
                    <div class="col-lg-12 ">
                        <br />
                        <div class="alert alert-danger">
                            <strong>Good People, Good Food, Good Times.  </strong> <span>It's okay to eat a whole pizza by yourself.</span> 
                        </div>

                    </div>
                </div>

            </div>

        </div>

    </div>
  

</body>
</html>
